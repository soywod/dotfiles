{
  "layer": "top",
  "position": "top",
  "height": 15,
  "modules-left": [
    "battery",
    "temperature",
    "cpu",
    "memory",
    "disk",
    "network",
    "backlight",
    "pulseaudio"
  ],
  "modules-center": [
