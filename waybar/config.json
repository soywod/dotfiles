{
  "layer": "top",
  "position": "bottom",
  "height": 15,
  "modules-left": ["battery", "temperature", "cpu", "memory", "disk", "sway/language", "backlight", "pulseaudio"],
  "modules-center": ["clock"],
  "modules-right": ["sway/mode", "custom/comodoro", "network"],
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-alt": "{time}",
    "format-full": "",
    "format-charging": " {capacity}%",
    "format-plugged": " {capacity}%",
    "format-icons": ["", "", "", "", ""] 
  },
  "temperature": {
    "tooltip": false,
    "hwmon-path": "/sys/devices/virtual/hwmon/hwmon5/temp1_input",
    "thermal-zone": 0,
    "critical-threshold": 80,
    "format": "{icon} {temperatureC}°C",
    "format-critical": "{icon} {temperatureC}°C",
    "format-icons": ["", "", "", "", ""]
  },
  "cpu": {
    "tooltip": false,
    "format": " {usage}%"
  },
  "memory": {
    "format": " {percentage}%",
    "tooltip-format": "{used:0.2f}GiB/{avail:0.2f}GiB"
  },
  "disk": {
    "interval": 60,
    "path": "/",
    "format": " {percentage_free}%",
    "tooltip-format": "{used}/{total}"
  },
  "backlight": {
    "tooltip": false,
    "device": "acpi_video1",
    "format": " {percent}%"
  },
  "sway/language": {
    "tooltip": false,
    "format": " {}"
  },
  "pulseaudio": {
    "tooltip": false,
    "scroll-step": 2,
    "format": "{icon} {volume}%",
    "format-bluetooth": " {icon} {volume}%",
    "format-muted": "{icon} --%",
    "format-icons": {
        "headphone": "",
        "hands-free": "",
        "headset": "",
        "phone": "",
        "portable": "",
        "car": "",
        "default": ""
    }
  },
  "clock": {
    "tooltip": false,
    "format": "{:%H:%M, %a %b %e}"
  },
  "sway/mode": {
    "format": "{}"
  },
  "custom/comodoro": {
    "exec": "comodoro watch",
    "on-click": "if [ -e /tmp/comodoro.pid ]; then comodoro stop; else comodoro start; fi"
  },
  "network": {
    "interface": "wlp2*",
    "format-wifi": " {ipaddr} ({signalStrength}%)",
    "tooltip-format-wifi": "{essid}",
    "format-ethernet": " {ipaddr}",
    "tooltip-format-ethernet": "",
    "format-disconnected": "⚠ No connection"
  }
}
